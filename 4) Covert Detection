    %Aplicando a Cadeia de Markov
    if(k>=99)&&(mod(k,10)==0)
        Ran = rand;
        if (Ran>=0)&&(Ran<=SR(Teta(k),1))
            Teta(k+1:k+11)=2;
        elseif (Ran>SR(Teta(k),1))&&(Ran<=SR(Teta(k),2))
            Teta(k+1:k+11)=2;
        elseif (Ran>SR(Teta(k),2))&&(Ran<=SR(Teta(k),3))
